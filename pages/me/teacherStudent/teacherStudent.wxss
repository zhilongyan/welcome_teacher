@import "../../common/weui.wxss";
@import "../../me/myClass/myClass.wxss";

page {
  background-color: #f8f8f8;
}

.content {
  position: fixed;
  z-index: 10;
  width: 100%;
  /* height: 500rpx; */
  margin: 0;
}

.blank {
  height: 360rpx;
}

.container {
  flex: 0;
  background: #eee;
}

.picker {
  padding: 19rpx 26rpx;
  background-color: #fff;
}

.sureButton {
  /*position: absolute;*/
  top: 50rpx;
}

.alreadyLive {
  display: flex;
  flex-direction: column;
}

.alreadyLiveStudent {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 15rpx;
  background: rgb(255, 255, 255);
}

.headImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  /*display: inline-block;*/
  align-items: center;
}

.liveStudent {
  width: 450rpx;
  margin-left: 10rpx;
  /*display: inline-block*/
}

.mesImg {
  width: 70rpx;
  height: 40rpx;
}

.packUp {
  position: fixed;
  right: 0;
  top: 0;
  width: 105rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  z-index: 999;
}

.callImage {
  width: 33rpx;
  height: 33rpx;
  position: relative;
  top: 14.5rpx;
}
