.content {
  /*flex: 1;*/
  display: flex;
  /*position: relative;*/
  /*z-index: 10;*/
  flex-direction: column;
  align-items: stretch;
  /*justify-content: center;*/
  width: 100%;
  height: 100%;
  margin-bottom: -100rpx;
  flex: 1
}


.personal_info {
  padding: 5px 0;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-bottom: 5rpx;
}

.photo_wrap {
  padding: 5px 5px;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.photo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.img {
  width: 45rpx;
  height: 45rpx;
  padding: 22rpx 30rpx;
}

.img_2 {
  width: 20px;
  height: 20px;
  padding: 12px 10px;
}

.user-name {
  padding: 5px 5px;
  float: left;
  width: 200px;
  display: block;
  font-size: 16px;
  margin-left: 20rpx;
}

.nickname {
  margin-top: 15px;
  /*text-align: center;*/
  color: #696969;
}

.Student-ID {
  /*text-align: center;  */
  margin-top: 15px;
  color: #696969;
}

.wode_item_wrap {
  background-color: #fff;
  font-size: 14px;
  margin-top: 10px;
  border-top: 1px solid #e5e5e5;
  clear: left;
}

.wode_item {
  height: 45px;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 10px;
  line-height: 45px;
  position: relative;
}

.arrow_wrap {
  position: absolute;
  width: 50px;
  height: 45px;
  right: 0;
  top: 0;
  /*background-image: url(../../image/icon-arrow.png);
    background-repeat: no-repeat;*//*background-size: 16px;
    background-position: 17px 14px;*/
}

.arrow_wrap_left {
  position: absolute;
  width: 50px;
  height: 45px;
  left: 0;
  top: 0;
  /*background-image: url(../../image/icon-arrow.png);*/
  background-repeat: no-repeat;
  background-size: 16px;
  background-position: 17px 14px;
}

.arrow_wrap_middle {
  position: absolute;
  left: 55px;
  top: 0;
}

.wode_out {
  height: 45px;
  line-height: 45px;
  text-align: center;
  background-color: #fff;
  /*margin-top: 10px;*/
  border-bottom: 1px solid #e5e5e5;
  border-top: 1px solid #e5e5e5;
}

