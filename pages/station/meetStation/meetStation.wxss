/* pages/station/meetStation/meetStation.wxss */

.container {
  padding: 0;
  letter-spacing: 0rpx;
}

form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}

.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  background: #fff;
  border-radius: 5px;
  border: 2px solid #f4f4f4;
  transition: all 0.25s ease-in-out;
}

.input-group.active {
  border: 2px solid #7acfa6;
}

.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8;
}

.input-group input, .input-group picker {
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}

.input-placeholder, .input-group picker.placeholder {
  color: #ccc;
}

.button {
  margin: 0 0 30rpx 0;
}

.button button {
  width: 94%;
}

.num {
  margin: 0 30rpx 20rpx;
  display: flex;
}


.notReceiveNum {
  font-size: 50rpx;
  color: red;
  margin: 0 15rpx;
}

.notReceive text:first-child {
  font-size: 30rpx;
  color: #999;
}

.receivedNum {
  color: blue;
  font-size: 50rpx;
  margin: 0 15rpx;
}

.received text:first-child {
  font-size: 30rpx;
  color: #999;
}

.content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border: 1rpx solid #eee;
  margin: 10rpx 20rpx;
  padding: 10rpx 10rpx;
  background-color: #fff;
}

.content .message {
  display: flex;
  flex-direction: column;
}

.head {
  display: flex;
  align-items: center;
}

.name {
  margin-right: 30rpx;
  font-size: 30rpx;
}

.time {
  color: #ccc;
  font-size: 25rpx;
}

.address {
  font-size: 25rpx;
  color: #999;
}

.image {
  display: flex;
  align-items: center;
  justify-content: center;
}

.back {
  font-size: 24rpx;
  display: flex;
  justify-content: flex-end;
  margin: -10rpx 10% 10rpx 0;
  color: blue;
  text-decoration: underline;
}

.position {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 450rpx;
  height: 40rpx;
}

.phone {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.downStatus {
  text-align: center;
  margin: 30rpx 0 0 0;
}

.messageView{
  background-color: #f9f9f9;
  height: 770rpx;
  margin: 20rpx 0 0 0; 
}