/* pages/notice/index/index.wxss */

.container {
  background-color: #f4f4f4;
  height: 100%;
  padding-bottom: 20rpx;
}

.line {
  width: 100%;
  border-top: 1rpx solid rgb(163, 163, 163);
  position: relative;
  top: 39rpx;
  z-index: 1;
}

.push {
  /*margin: 20rpx 0;*/
  padding: 20rpx 60rpx;
  /*height: 50rpx;*/
  border: 10rpx;
  font-size: 25rpx;
}

.pushText {
  display: block;
  z-index: 999;
  background-color: #f4f4f4;
  position: relative;
  width: 120rpx;
  text-align: center;
  color: rgb(163, 163, 163);
}

.bar {
  /*width: 100%;*//*margin: 20rpx 0;*/
  padding: 15rpx 45rpx;
  overflow: hidden;
  flex-direction: column;
  font-size: 30rpx;
  border-top: 2rpx solid #ccc;
  background-color: #fefefe;
}

.view .bar:last-child {
  border-bottom: 2rpx solid #ccc;
}

.leftbar {
  width: 500rpx;
  height: 68rpx;
  margin-left: 30rpx;
  overflow: hidden;
}

.viewimg {
  width: 45rpx;
  height: 44rpx;
  padding: 18rpx 14rpx;
  margin: 0 0 0 580rpx;
  position: absolute;
}

view {
  font-family: "微软雅黑";
}

.add {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add image {
  width: 90rpx;
  height: 90rpx;
}

.head {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.title {
  font-size: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.pushContent {
  color: rgb(163, 163, 163);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.time {
  color: rgb(163, 163, 163);
  font-size: 25rpx;
}
